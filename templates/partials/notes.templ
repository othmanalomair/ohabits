templ SearchResultEntry(entry database.DailyNoteEntry, query string) {
	<a
		href={ templ.SafeURL(fmt.Sprintf("/?date=%s", entry.Date.Format("2006-01-02"))) }
		class="block retro-card p-4 hover:border-primary-500 transition-colors"
	>
		<div class="flex items-center justify-between mb-2">
			<div class="flex items-center gap-2">
				if entry.Mood != nil {
					<span class="text-xl">{ getMoodEmoji(entry.Mood.Rating) }</span>
				}
				<span class="font-bold text-retro-dark">
					{ arabicDays[entry.Date.Weekday()] } - { fmt.Sprintf("%d", entry.Date.Day()) } { arabicMonths[entry.Date.Month()] } { fmt.Sprintf("%d", entry.Date.Year()) }
				</span>
			</div>
			<svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
			</svg>
		</div>
		if entry.Note != nil && entry.Note.Text != "" {
			<p class="text-sm text-gray-600 line-clamp-2">
				{ truncateText(entry.Note.Text, 150) }
			</p>
		}
	</a>
}

func truncateText(text string, maxLen int) string {
	runes := []rune(text)
	if len(runes) <= maxLen {
		return text
	}
	return string(runes[:maxLen]) + "..."
}
