func initImagesData(images []database.DailyImage) string {
	paths := "["
	for i, img := range images {
		if i > 0 {
			paths += ","
		}
		paths += fmt.Sprintf(`"%s"`, img.OriginalPath)
	}
	paths += "]"
	return fmt.Sprintf("images = %s", paths)
}

